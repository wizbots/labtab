<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lab_details_extra_layout_1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/lab_details_extra_layout"
    android:layout_marginTop="@dimen/extra_small_margin"
    android:gravity="center|left">

    <ImageView
        android:id="@+id/iv_add_video"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/add_video"
        android:src="@drawable/ic_add_video" />

    <TextView
        android:id="@+id/tv_promote"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_toRightOf="@id/iv_add_video"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/extra_extra_small_padding"
        android:paddingRight="@dimen/extra_extra_small_padding"
        android:text="@string/promote"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_demote"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_promote"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/extra_extra_small_padding"
        android:paddingRight="@dimen/extra_extra_small_padding"
        android:text="@string/demote"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_mark_absent"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_demote"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/extra_extra_small_padding"
        android:paddingRight="@dimen/extra_extra_small_padding"
        android:text="@string/mark_absent"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cb_send_absent_notification"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_mark_absent"
        android:button="@drawable/check_box_small_selector" />

    <TextView
        android:id="@+id/tv_send_absent_notification"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/cb_send_absent_notification"
        android:gravity="center"
        android:text="@string/send_absent_notification"
        android:textColor="@color/material_light_blue_800"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_minus"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@id/tv_send_absent_notification"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/extra_small_padding"
        android:paddingRight="@dimen/extra_small_padding"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <org.wizbots.labtab.customview.TextViewCustom
        android:id="@+id/tv_wizchips"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_minus"
        android:gravity="center"
        android:text="@string/wizchips"
        android:textAllCaps="true"
        android:textColor="@color/purple"
        android:textSize="14sp"
        app:font="@string/font_pt_sans_narrow_regular" />

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_wizchips"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:paddingLeft="@dimen/extra_small_padding"
        android:paddingRight="@dimen/extra_small_padding"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_calendar" />

</RelativeLayout>
