<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_layout_orange"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="@dimen/extra_small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/extra_extra_small_padding">

            <org.wizbots.labtab.customview.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_extra_extra_small" />

            <FrameLayout
                android:id="@+id/spinner_location_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_extra_small_margin"
                android:background="@color/white">

                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_extra_extra_small" />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="-6dp"
                    android:background="@drawable/arrow_down" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/year_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/extra_extra_small_padding">

            <org.wizbots.labtab.customview.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_extra_extra_small" />

            <FrameLayout
                android:id="@+id/spinner_year_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_extra_small_margin"
                android:background="@color/white">

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_extra_extra_small" />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="-6dp"
                    android:background="@drawable/arrow_down" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seasion_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/year_container"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="@dimen/extra_extra_small_padding">

            <org.wizbots.labtab.customview.TextViewCustom
                android:id="@+id/textViewCustom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/season"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_extra_extra_small" />

            <FrameLayout
                android:id="@+id/spinner_season_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_extra_small_margin"
                android:background="@color/white">

                <Spinner
                    android:id="@+id/spinner_season"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_extra_extra_small" />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="-6dp"
                    android:background="@drawable/arrow_down" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mentor_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/year_container"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/extra_extra_small_padding">

            <org.wizbots.labtab.customview.TextViewCustom
                android:id="@+id/textViewCustom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sku"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_extra_extra_small" />

            <FrameLayout
                android:id="@+id/edit_text_sku_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_extra_small_margin"
                android:background="@color/white">

                <org.wizbots.labtab.customview.EditTextCustom
                    android:id="@+id/edit_text_sku"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_extra_extra_small"
                    android:layout_marginEnd="15dp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/extra_extra_small_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/extra_extra_small_margin">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/extra_extra_small_margin"
                android:background="@drawable/rounded_layout_blue"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/extra_extra_small_margin"
                android:background="@drawable/rounded_layout_purple"
                android:src="@drawable/ic_cross" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>