<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lab_details_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lab_details_checkbox_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lab_detail_header_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_lab_detail"
            android:layout_width="@dimen/lab_detail_check_box_width"
            android:layout_height="@dimen/lab_detail_check_box_height" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/student_name_container"
        android:layout_width="@dimen/lab_detail_student_name_container_width"
        android:layout_height="@dimen/lab_detail_header_height"
        android:gravity="center"
        android:orientation="vertical">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/student_name"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lab_level_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lab_detail_header_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lab_level"
            android:layout_width="@dimen/lab_detail_image_width"
            android:layout_height="@dimen/lab_detail_image_height"
            android:contentDescription="@string/action_image"
            android:padding="@dimen/extra_extra_small_padding"
            android:src="@drawable/level_master" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/projects_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lab_detail_header_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_no_of_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_100"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lab_time_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lab_detail_header_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_no_of_lab_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_100"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/done_container"
        android:layout_width="@dimen/lab_detail_image_width"
        android:layout_height="@dimen/lab_detail_header_height"
        android:gravity="center"
        android:orientation="vertical">


        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_no_of_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_100"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/skipped_container"
        android:layout_width="@dimen/lab_detail_image_width"
        android:layout_height="@dimen/lab_detail_header_height"
        android:gravity="center"
        android:orientation="vertical">


        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_no_of_skipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_100"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pending_container"
        android:layout_width="@dimen/lab_detail_image_width"
        android:layout_height="@dimen/lab_detail_header_height"
        android:gravity="center"
        android:orientation="vertical">


        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_no_of_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_100"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_container"
        android:layout_width="@dimen/lab_detail_action_container_width"
        android:layout_height="@dimen/lab_detail_header_height"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_action_view"
                android:layout_width="@dimen/lab_detail_image_width"
                android:layout_height="@dimen/lab_detail_image_height"
                android:layout_margin="@dimen/extra_extra_small_margin"
                android:background="@drawable/circle_blue"
                android:contentDescription="@string/action_image"
                android:padding="@dimen/extra_extra_small_padding"
                android:src="@drawable/action_view" />

            <ImageView
                android:id="@+id/iv_action_edit"
                android:layout_width="@dimen/lab_detail_image_width"
                android:layout_height="@dimen/lab_detail_image_height"
                android:layout_margin="@dimen/extra_extra_small_margin"
                android:background="@drawable/circle_blue"
                android:contentDescription="@string/action_image"
                android:padding="@dimen/extra_small_padding"
                android:src="@drawable/action_edit" />

            <ImageView
                android:id="@+id/iv_action_close_to_next_level"
                android:layout_width="@dimen/lab_detail_image_width"
                android:layout_height="@dimen/lab_detail_image_height"
                android:layout_margin="@dimen/extra_extra_small_margin"
                android:contentDescription="@string/action_image"
                android:padding="@dimen/extra_extra_small_padding"
                android:src="@drawable/marks_close_to_next_level" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>