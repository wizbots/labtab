<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signature_list_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lab_detail_header_height"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_date_signature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_date_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/date"
            android:textSize="@dimen/text_size_roster_lists"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_in_signature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_in_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/in"
            android:textSize="@dimen/text_size_roster_lists"
            android:layout_marginEnd="20dp"
            app:font="@string/font_pt_sans_narrow_regular"
            android:layout_marginRight="20dp" />

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_signed_in"
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/sign_in"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_out_signature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_out_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/out"
            android:textSize="@dimen/text_size_roster_lists"
            app:font="@string/font_pt_sans_narrow_regular"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_signed_out"
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/sign_in"
            android:background="@color/light_blue"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

</LinearLayout>