<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.wizbots.labtab.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="@color/purple">

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp50"
                    android:contentDescription="@string/menu_image"
                    android:src="@drawable/menu" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <org.wizbots.labtab.util.TextViewCustom
                    android:id="@+id/tv_lab_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp50"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="#FF1C6089"
                    android:textSize="@dimen/sp40"
                    android:textStyle="bold"
                    app:font="@string/font_pt_sans_narrow_regular" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@color/purple"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <org.wizbots.labtab.util.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp50"
                    android:gravity="center"
                    android:text="@string/welcome_mentor_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp22"
                    app:font="@string/font_pt_sans_narrow_regular" />


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lab_tab"
            android:layout_width="@dimen/dp220"
            android:layout_height="@dimen/dp160"
            android:layout_gravity="right"
            android:contentDescription="@string/labtab_image"
            android:padding="@dimen/dp5"
            android:src="@drawable/app_logo" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_go_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp10"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_go_to_web"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/go_to_image"
                            android:padding="@dimen/dp25"
                            android:src="@drawable/home_button_go_to_web" />
                    </LinearLayout>

                    <org.wizbots.labtab.util.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/go_to_www_wizbots_com"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp22"
                        app:font="@string/font_pt_sans_narrow_regular" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_lab_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp10"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_lab_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/lab_list_image"
                            android:padding="@dimen/dp25"
                            android:src="@drawable/home_button_lab_list" />
                    </LinearLayout>

                    <org.wizbots.labtab.util.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/lab_list"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp22"
                        app:font="@string/font_pt_sans_narrow_regular" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dark_blue"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp10"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_video_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/video_list_image"
                            android:padding="@dimen/dp25"
                            android:src="@drawable/home_button_video_list" />
                    </LinearLayout>

                    <org.wizbots.labtab.util.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/video_list"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp22"
                        app:font="@string/font_pt_sans_narrow_regular" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_my_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp10"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_my_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/my_profile_image"
                            android:padding="@dimen/dp25"
                            android:src="@drawable/home_button_my_profile" />
                    </LinearLayout>

                    <org.wizbots.labtab.util.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/my_profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp22"
                        app:font="@string/font_pt_sans_narrow_regular" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
