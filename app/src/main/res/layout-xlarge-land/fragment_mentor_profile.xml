<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view_mentor_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mentor_profile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/extra_large_padding">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rounded_layout_blue_for_profile"
                        android:gravity="center">

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/extra_extra_small_margin"
                            android:gravity="center"
                            android:text="@string/mentor_s_photo"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/text_size_extra_small"
                            app:font="@string/font_pt_sans_narrow_regular" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_extra_small_margin"
                        android:background="@drawable/rounded_layout_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/extra_small_padding">

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:text="@string/first_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:id="@+id/tv_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_white"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/extra_extra_small_padding"
                            android:paddingRight="@dimen/extra_extra_small_padding"
                            android:text="@string/dummy_text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_extra_small_margin"
                        android:background="@drawable/rounded_layout_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/extra_small_padding">

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:text="@string/last_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:id="@+id/tv_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_white"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/extra_extra_small_padding"
                            android:paddingRight="@dimen/extra_extra_small_padding"
                            android:text="@string/dummy_text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_extra_small_margin"
                        android:background="@drawable/rounded_layout_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/extra_small_padding">

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:text="@string/email"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_white"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/extra_extra_small_padding"
                            android:paddingRight="@dimen/extra_extra_small_padding"
                            android:text="@string/dummy_text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_extra_small_margin"
                        android:background="@drawable/rounded_layout_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/extra_small_padding">

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:text="@string/username"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                        <org.wizbots.labtab.customview.TextViewCustom
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_extra_small_margin"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_white"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/extra_extra_small_padding"
                            android:paddingRight="@dimen/extra_extra_small_padding"
                            android:text="@string/dummy_text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_small"
                            app:font="@string/font_pt_sans_narrow_regular" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
