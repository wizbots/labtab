                        android:paddingRight="@dimen/extra_extra_small_padding"
                        android:text="@string/dummy_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/extra_extra_small_margin"
                    android:background="@drawable/rounded_layout_blue"
                    android:orientation="horizontal"
                    android:padding="@dimen/extra_small_padding">

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/extra_extra_small_margin"
                        android:layout_weight="2"
                        android:gravity="center|end"
                        android:text="@string/street_address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:id="@+id/tv_state_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/extra_extra_small_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_layout_white"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/extra_extra_small_padding"
                        android:paddingRight="@dimen/extra_extra_small_padding"
                        android:text="@string/dummy_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/extra_extra_small_margin"
                    android:background="@drawable/rounded_layout_blue"
                    android:orientation="horizontal"
                    android:padding="@dimen/extra_small_padding">

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/extra_extra_small_margin"
                        android:layout_weight="2"
                        android:gravity="center|end"
                        android:text="@string/city"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/extra_extra_small_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_layout_white"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/extra_extra_small_padding"
                        android:paddingRight="@dimen/extra_extra_small_padding"
                        android:text="@string/dummy_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/extra_extra_small_margin"
                    android:background="@drawable/rounded_layout_blue"
                    android:orientation="horizontal"
                    android:padding="@dimen/extra_small_padding">

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/extra_extra_small_margin"
                        android:layout_weight="2"
                        android:gravity="center|end"
                        android:text="@string/zip_code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:id="@+id/tv_zip_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/extra_extra_small_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_layout_white"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/extra_extra_small_padding"
                        android:paddingRight="@dimen/extra_extra_small_padding"
                        android:text="@string/dummy_text"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/extra_extra_small_margin"
                    android:background="@drawable/rounded_layout_blue"
                    android:orientation="horizontal"
                    android:padding="@dimen/extra_small_padding">

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/extra_extra_small_margin"
                        android:layout_weight="2"
                        android:gravity="center|end"
                        android:text="@string/phone_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:font="@string/font_pt_sans_narrow_regular" />

                    <org.wizbots.labtab.customview.TextViewCustom
                        android:id="@+id/tv_phone1"
                        android:layout_width="match_parent"
