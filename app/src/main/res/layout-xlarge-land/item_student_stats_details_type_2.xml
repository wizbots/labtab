<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_stats_details_root_layout_type_2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/student_stats_header_height"
    android:background="@color/light_gray"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/student_name_container"
        android:layout_width="@dimen/zero_dimension"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lab_level_container"
        android:layout_width="@dimen/zero_dimension"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lab_step_container"
        android:layout_width="@dimen/zero_dimension"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lab_step"
            android:layout_width="@dimen/lab_detail_image_width"
            android:layout_height="@dimen/lab_detail_image_height"
            android:contentDescription="@string/action_image"
            android:padding="@dimen/extra_extra_small_padding"
            android:src="@drawable/ic_lab_step_2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_category_container"
        android:layout_width="@dimen/zero_dimension"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center|left"
        android:orientation="vertical">

        <org.wizbots.labtab.customview.TextViewCustom
            android:id="@+id/tv_project_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/project_name"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_pt_sans_narrow_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_status_container"
        android:layout_width="@dimen/zero_dimension"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_project_status"
            android:layout_width="@dimen/lab_detail_image_width"
            android:layout_height="@dimen/lab_detail_image_height"
            android:contentDescription="@string/action_image"
            android:padding="@dimen/extra_extra_small_padding" />

    </LinearLayout>

</LinearLayout>
